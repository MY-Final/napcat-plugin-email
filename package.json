    "邮件"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/MY-Final/napcat-plugin-email.git"
  },
  "bugs": {
    "url": "https://github.com/MY-Final/napcat-plugin-email/issues"
  },
