    "@types/nodemailer": "^7.0.9",
    "napcat-plugin-debug-cli": "^1.2.6",
    "nodemailer": "^8.0.1",
    "typescript": "^5.9.3",
    "vite": "^6.4.1",
    "ws": "^8.19.0"
  },
  "scripts": {
